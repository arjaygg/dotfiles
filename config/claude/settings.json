{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Access library documentation and code examples"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "description": "File system operations with controlled access"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "description": "Git repository operations and history"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Knowledge graph and memory management"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "description": "Sequential thinking and problem solving"
    },
    "directory-tree": {
      "command": "npx",
      "args": [
        "-y",
        "@andredezzy/deep-directory-tree-mcp"
      ],
      "description": "Generate visual directory structures"
    },
    "mcp-video": {
      "command": "npx",
      "args": [
        "-y",
        "@felores/mcp-video"
      ],
      "description": "Video processing and transcript extraction"
    },
    "markitdown": {
      "command": "markitdown-mcp",
      "args": [],
      "description": "Convert documents and web pages to markdown"
    }
  },
  "permissions": {
    "allow": [
      "*"
    ],
    "deny": []
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  },
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": true
}
